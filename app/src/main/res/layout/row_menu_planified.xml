        android:layout_below="@+id/repastextmenu"
        android:layout_alignLeft="@+id/repastextmenu"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        tools:text="Plat" />

    <TextView
        android:id="@+id/repastextdessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repastextmenu"
        android:layout_alignLeft="@+id/repastextmenu"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        tools:text="Dessert" />

    <TextView
        android:id="@+id/repastextdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repastextmenu"
        android:layout_alignLeft="@+id/repastextmenu"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        tools:text="Date" />


</LinearLayout>